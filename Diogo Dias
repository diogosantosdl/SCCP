<body>
    <div class="container">
        <h1>Corinthians maior time do mundo?</h1>
        <button class="btn-sim" onclick="responder('sim')">Sim</button>
        <button class="btn-nao" id="btn-nao" onclick="responder('nao')">NÃ£o</button>
        <p id="mensagem"></p>
    </div>

    <script>
        function responder(resposta) {
            const mensagem = document.getElementById('mensagem');
            if (resposta === 'sim') {
                mensagem.textContent = 'VocÃª tem bom gosto! ðŸŽ‰';
                mensagem.style.color = 'green';
            } else if (resposta === 'nao') {
                mensagem.textContent = 'Ah, nÃ£o conseguiu pegar! ðŸ˜…';
                mensagem.style.color = 'red';
            }
        }

        // FunÃ§Ã£o para fazer o botÃ£o "NÃ£o" fugir do cursor
        const btnNao = document.getElementById('btn-nao');

        btnNao.addEventListener('mouseover', () => {
            const maxX = window.innerWidth - btnNao.offsetWidth;
            const maxY = window.innerHeight - btnNao.offsetHeight;
            const randomX = Math.floor(Math.random() * maxX);
            const randomY = Math.floor(Math.random() * maxY);

            btnNao.style.position = 'absolute';
            btnNao.style.left = `${randomX}px`;
            btnNao.style.top = `${randomY}px`;
        });
    </script>
